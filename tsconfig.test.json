{
	"root": true,
	"compilerOptions": {
		"target": "ES5",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": ["ESNEXT", "dom"],
		"downlevelIteration": true,
		"sourceMap": true,
		"baseUrl": ".",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"importHelpers": true
	},
	"include": ["src/*", "src/**/*"],
	"exclude": ["node_modules"]
}
